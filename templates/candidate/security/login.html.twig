{% extends 'base.html.twig' %}

{% block title %}Connexion Espace Candidat{% endblock %}

{% block body %}
    <form method="post" class="mt-5 container" name="login">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <h1 class="h3 mb-3 font-weight-normal">Connexion Espace Candidat</h1>
        <label for="inputEmail">Votre Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary mt-2" type="submit">Se connecter</button>
        <div class="">candidat@verif.fr, mot de passe : 12</div>
    </form>
{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
    {% if jobOffers %}
        <div class="container table-responsive mt-4">
            <h3>Les Offres Emploies </h3>
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom du job</th>
                    <th scope="col">Emplacement</th>
                    <th scope="col">Date de cr√©ation</th>
                    <th scope="col">email du recruteur</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for job_offer in jobOffers %}
                    <tr>
                        <th scope="row">{{ job_offer.id }}</th>
                        <td>{{ job_offer.jobName }}</td>
                        <td>{{ job_offer.workplace }}</td>
                        <td>{{ job_offer.createdAt|date('d/m/Y') }}</td>
                        <td>{{ job_offer.recruiter.email }}</td>
                        <td><a href="{{ path('candidate_post_jobOffer', {'IdJobOffer': job_offer.id}) }}" class="btn btn-success">Postuler</a></td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
    {% endif %}
{% endblock %}